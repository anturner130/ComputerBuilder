<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="158dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Billing Address"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"

            android:id="@+id/billingAddress1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/textPersonName1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/textPostalAddress1"
            android:text="Address" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textCityStateZip"
            android:text="City, State, Zip" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="381dp"
        android:layout_height="53dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Payment Information"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:id="@+id/textView9" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textCreditCard"
            android:text="Credit Card Number" />

        <EditText
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:id="@+id/textCVC"
            android:text="CVC" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Expiration Date"
            android:textStyle="italic"
            android:id="@+id/textExpirationDate"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:enabled="false"
            android:textColor="#040404" />

        <DatePicker
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:calendarViewShown="false"
            android:id="@+id/datePickerExpiration"
            android:layout_gravity="center"
            android:calendarTextColor="#331818" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place Order"
            android:id="@+id/placeOrderButton"
            android:textColor="@color/colorButtonText"
            android:background="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</LinearLayout>
